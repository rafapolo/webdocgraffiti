= render :partial=>"pages/toggle"

:coffeescript

	abre = (id) ->
		seta = $(id)
		$(seta.attr("toggle")).parent().slideToggle()		
		if seta.attr("fechado") == "0"
			seta.attr("fechado", "1")
			seta.rotate({animateTo:90})
		else
			seta.attr("fechado", "0")
			seta.rotate({animateTo:0})

	$(document).ready -> 
		$("#menu").css("float", "left")
		$('iframe').fadeIn(700)
		$(".abre").click -> abre($(this))			