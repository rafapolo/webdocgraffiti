= render :partial => "pages/menu"
- content_for :head do
	= javascript_include_tag "index"

%noscript
	%h1
		Habilite o Javascript!	

.container
	.logo
		= image_tag "/assets/logos/wdg_logo_home.gif"

	- if p=@prev
		%img.nav.esq{:src=>"/assets/setas/seta_e.png", :nav=>p}
	
	.info-container		
		.info-box
			%span
				- if b = Bloco.next
					%a#atual{:href=>play_bloco(b)}
						EPISÃ“DIO #{count b.episodio.position}: #{b.episodio.titulo}
	
	- if n=@next
		%img.nav.dir{:src=>"/assets/setas/seta_d.png", :nav=>n}
	-  else
		%img.nav.dir.hidden{:src=>"/assets/setas/seta_d.png", :nav=>Episodio.count}
	
	- if e = Bloco.ensaio
		%a{:href=>play_bloco(e)}	
			%img#ensaio{:src=>"/assets/wdg_ensaio.png"}
	- else
		%a.hidden{}
			%img#ensaio{:src=>"/assets/wdg_ensaio.png"}

