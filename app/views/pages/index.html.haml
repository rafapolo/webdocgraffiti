= render :partial => "pages/fundo"
= render :partial => "pages/menu"
- content_for :head do
	= javascript_include_tag "index"

.container
	.logo
		= image_tag "/assets/logos/wdg_logo_home.gif"
	
	- if false # previous
		%img.nav.esq{:src=>"/assets/setas/seta_e.png"}
	
	.info-container		
		.info-box
			%span
				- if b = Bloco.next
					%a#atual{:href=>play_bloco(b), :title=>"Assista o último episódio"}
						EPISÓDIO #{count Episodio.count}: #{b.episodio.titulo}
	
	- if false # previous
		%img.nav.dir{:src=>"/assets/setas/seta_d.png"}
	
	- if e = Bloco.ensaio
		%a{:href=>play_bloco(e)}	
			%img#ensaio{:src=>"/assets/wdg_ensaio.png"}

= render :partial => "pages/rodape"