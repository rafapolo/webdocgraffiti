:coffeescript

	abre = (id) ->
		seta = $(id)
		$(seta.attr("toggle")).parent().slideToggle()

		if seta.attr("fechado")=="0"
			seta.attr("fechado", "1")
			seta.rotate({animateTo:90})
		else
			seta.attr("fechado", "0")
			seta.rotate({animateTo:0})	

	$ ->
		$(".video").click -> window.location.href="/player"

		$('.container').fadeIn(500)

		$(".abre").click -> 
			abre($(this))